generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(uuid())
  name               String
  email              String   @unique
  password           String
  gender             Gender   @default(male)
  phone              String?  @unique
  age                Int?
  role               Role     @default(user)
  location           String?
  languagePreference Language @default(en)
  isVerified         Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  //* TODO: ADD 'deletedAt' field for soft delete
  //deletedAt          DateTime?

  //* TODO: UPDATE 'refreshToken' to 'refreshTokens'
  refreshToken RefreshToken[]
  //* TODO: UPDATE 'Organizer' to 'organizer'
  Organizer    Organizer?
}

enum Role {
  admin
  user
  organizer
}

enum Gender {
  male
  female
}

enum Language {
  en
  ar
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  code      String
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model ResetPasswordToken {
  id        Int      @id @default(autoincrement())
  email     String
  token     String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  isRevoked Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, token])
}

model Organizer {
  id         String    @id @default(uuid())
  userId     String    @unique
  isApproved Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  user  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  Event Event[]
}

model Event {
  id          Int       @id @default(autoincrement())
  organizerId String
  venueId     Int?
  categoryId  Int?
  slug        String    @unique
  title       String
  bannerDisk  String    @default("local")
  bannerPath  String
  description String
  type        EventType @default(ticketed)
  mode        EventMode @default(single)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  organizer   Organizer @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  venue       Venue?    @relation(fields: [venueId], references: [id], onDelete: SetNull)

  eventSessions EventSession[]
  ticketTypes   TicketType[]

  @@unique([organizerId, slug])
}

model EventSession {
  id        Int           @id @default(autoincrement())
  eventId   Int
  status    SessionStatus @default(active)
  //* TODO: ADD capcaity field
  // capacity Int
  startDate DateTime
  endDate   DateTime
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, startDate, endDate])
}

enum SessionStatus {
  active
  cancelled
}

enum EventType {
  ticketed
  free
}

enum EventMode {
  single
  recurring
}

model Venue {
  id            Int      @id @default(autoincrement())
  googlePlaceId String?  @unique
  latitude      Float
  longitude     Float
  name          String
  address       String
  country       String
  state         String
  city          String
  zipCode       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  events        Event[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  imagePath String
  imageDisk String   @default("local")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]
}

model TicketType {
  id        Int      @id @default(autoincrement())
  eventId   Int
  name      String
  price     Decimal  @db.Decimal(10, 2)
  sold      Int      @default(0)
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([name, eventId])
}


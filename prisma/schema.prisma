generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(uuid())
  name               String
  email              String   @unique
  password           String
  gender             Gender   @default(male)
  phone              String?  @unique
  age                Int
  role               Role     @default(user)
  location           String?
  languagePerference Language @default(en)
  isVerified         Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

enum Role {
  admin
  user
}

enum Gender {
  male
  female
}

enum Language {
  en
  ar
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  code      String
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
}
